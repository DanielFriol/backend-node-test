generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/database_prisma.sqlite"
}

model Pokemon {
  name       String
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  types      Type[]   @relation("PokemonToType")

  @@map("pokemons")
}

model Type {
  name       String    @unique
  id         Int       @id @default(autoincrement())
  created_at DateTime  @default(now())
  pokemons   Pokemon[] @relation("PokemonToType")

  @@map("types")
}
